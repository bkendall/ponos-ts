{
  "name": "ponos-ts",
  "version": "0.0.2",
  "description": "Typescript port of Ponos",
  "repository": "https://github.com/bkendall/ponos-ts",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf lib",
    "coveralls": "nyc report --reporter text-lcov | coveralls",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublish": "npm run prepare",
    "test": "nyc mocha $npm_package_options_mocha test/**/*.ts",
    "test:all": "npm run lint && npm run build && npm run test",
    "test:functional": "mocha $npm_package_options_mocha test-functional/**/*.ts",
    "test:watch": "mocha $npm_package_options_mocha -w --watch-extensions ts test/**/*.ts"
  },
  "options": {
    "mocha": "--require ts-node/register --require resources/mocha-bootstrap.ts --require source-map-support/register --full-trace"
  },
  "nyc": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "example/**/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "author": "Bryan Kendall <bryan@bryankendall.com>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/amqplib": "^0.5.9",
    "@types/bluebird": "^3.5.24",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "amqplib": "^0.5.3",
    "bluebird": "^3.5.3"
  }
}
